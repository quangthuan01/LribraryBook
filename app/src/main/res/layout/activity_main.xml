<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/bottom_bar"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:abb_selectedTabType="text"
        app:abb_indicatorAppearance="round"
        app:abb_indicatorMargin="16dp"
        app:abb_indicatorHeight="4dp"
        app:abb_tabs="@menu/tabs"
        app:abb_indicatorColor="@color/white"
        app:abb_tabColor="@color/white"
        app:abb_badgeBackgroundColor="@color/primary"
        app:abb_tabColorSelected="@color/white"
        app:abb_tabColorDisabled="@color/white"
        app:abb_tabAnimation="fade"
        app:abb_indicatorAnimation="slide"
        app:abb_badgeTextColor="@color/white"
        app:abb_animationDuration="300"
        app:abb_rippleColor="@color/white"
        app:abb_tabAnimationSelected="slide"
        app:abb_badgeTextSize="14sp"
        app:abb_selectedIndex="0"
        app:abb_indicatorLocation="bottom"
        android:layout_gravity="bottom"/>

</FrameLayout>